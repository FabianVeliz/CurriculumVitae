.l-experience
	margin 30px 0 20px

	h2
		padding-bottom 10px

	.row
		margin-left 25px
		position relative
		border-left 5px solid #3f51b5

		padding-bottom 40px
		padding-left 45px

		.rowDate
			color #fff
			text-align center
			position absolute
			height 50px
			width 50px
			background #3f51b5
			border-radius 50%
			left -27px
			top 0
			overflow hidden

			font-size 1.4em
			padding 15px 0

			box-shadow: 0 2px 5px rgba(0,0,0,0.26);

		.rowContent
			.line 
				box-shadow: 0 2px 5px rgba(0,0,0,0.26);
				margin-bottom 15px
				border-radius 3px
				overflow hidden

				.rowHeader
					overflow hidden
					background #3f51b5
					padding 7px 10px
					font-size 1.4em

					h3
						float left
						color #fff
					a
						float right
						color #fff
						text-decoration underline
						font-weight 300

				.detail
					padding 7px 10px
					font-size 1.4em
					background #f1f1f1

		&:last-child
			border-left 5px solid #fff
			padding-bottom 0
			
			
