.l-portfolio
	margin 30px 0 20px
	overflow hidden

	h2
		margin-bottom 10px

	ul
				
		li 
			width 25%
			height 200px
			float left
			
			a
				display block
				
				.portfolioImage
					position relative

					img
						display block
						width 100%
						height 100% 

					&:before
						content ""
						position absolute
						top 0
						left 0
						right 0
						bottom 0
						background rgba(255,255,255,.4) 